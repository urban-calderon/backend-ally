generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  fullName     String
  email        String    @unique
  password     String    @db.VarChar(255)
  createdAt    DateTime?
  lastLoginAt  DateTime?

  @@map("users")
}

model Todo {
  id         Int      @id @default(autoincrement())
  text       String
  completed  Boolean  @default(false)

  @@map("todos")
}

model Country {
  id     Int      @id @default(autoincrement())
  code   String   @db.Char(2)
  name   String

  @@map("countries")
}
